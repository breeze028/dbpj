    <None Remove="images\icon_personal.png" />
    <None Remove="images\icon_query_add.png" />
    <None Remove="images\icon_role.png" />
    <None Remove="images\icon_score.png" />
    <None Remove="images\icon_student.png" />
    <None Remove="images\icon_user.png" />
