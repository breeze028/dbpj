  <ItemGroup>
    <ProjectReference Include="..\SIMS.Utils\SIMS.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

