  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\icon_menu.png" />
    <Resource Include="images\icon_query_add.png" />
    <Resource Include="images\icon_score.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\icon_classes.png" />
    <Resource Include="images\icon_course.png" />
    <Resource Include="images\icon_personal.png" />
    <Resource Include="images\icon_role.png" />
    <Resource Include="images\icon_student.png" />
